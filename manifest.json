{
    "name": "XML_Reader",
    "version": "2.1",
    "manifest_version": 2,
    "description": "Pulls XML from Servicenow Platform",
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "contentscript.js"
            ]
        }
    ],
    "permissions": [
        "storage",
        "https://*/*",
        "http://*/*",
        "tabs"
    ],
    "web_accessible_resources": [
        "script.js",
        "contentscript.js"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "xml_reader_icon.png"
    },
    "options_ui":{
	"page": "options.html",
	"open_in_tab":false 
}
}
